<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="teamsb.mtglifeapp.LifeHost">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASS TURN"
            android:id="@+id/PassButton"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal|top" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/textView5"
                android:enabled="true"
                android:textSize="45dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/textView6"
                android:focusable="false"
                android:layout_alignTop="@+id/checkBox"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/textView7"
                android:layout_alignTop="@+id/checkBox"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="109dp"
            android:layout_gravity="left|bottom" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/textView8"
                android:enabled="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/textView9"
                android:focusable="false"
                android:layout_below="@+id/textView11"
                android:layout_toStartOf="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView11"
                android:layout_toEndOf="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="109dp"
            android:layout_gravity="center_horizontal|bottom" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_below="@+id/textView15"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/textView12"
                android:enabled="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/textView13"
                android:focusable="false"
                android:layout_below="@+id/textView15"
                android:layout_toStartOf="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/textView14"
                android:layout_below="@+id/textView15"
                android:layout_toEndOf="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView15"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="109dp"
            android:layout_gravity="right|bottom" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox4"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_below="@+id/textView19"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/textView16"
                android:enabled="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/textView17"
                android:focusable="false"
                android:layout_below="@+id/textView19"
                android:layout_toStartOf="@+id/textView19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/textView18"
                android:layout_below="@+id/textView19"
                android:layout_toEndOf="@+id/textView19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView19"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="149dp"
            android:layout_height="164dp"
            android:layout_gravity="left|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusOne"
                android:id="@+id/InfectPlusOne"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="21dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusFive"
                android:id="@+id/InfectPlusFive"
                android:layout_gravity="right|center_vertical"
                android:layout_alignTop="@+id/InfectPlusOne"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeOne"
                android:id="@+id/InfectMinusOne"
                android:layout_gravity="left|bottom"
                android:layout_alignTop="@+id/InfectMinusFive"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/InfectTitle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeFive"
                android:id="@+id/InfectMinusFive"
                android:layout_gravity="left|top"
                android:layout_below="@+id/InfectTitle"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="149dp"
            android:layout_height="164dp"
            android:layout_gravity="right|top" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeFive"
                android:id="@+id/HealthMinusFive"
                android:enabled="true"
                android:layout_marginTop="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeOne"
                android:id="@+id/HealthMinusOne"
                android:layout_above="@+id/HealthPlusOne"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusFive"
                android:id="@+id/HealthPlusFive"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/HealthPlusOne"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusOne"
                android:id="@+id/HealthPlusOne"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/HealthMinusFive"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Health"
                android:id="@+id/HealthTitle"
                android:layout_above="@+id/HealthMinusOne"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>
