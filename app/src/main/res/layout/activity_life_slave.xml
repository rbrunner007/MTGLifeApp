<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="teamsb.mtglifeapp.LifeSlave">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/GuestLifeCount"
                android:enabled="true"
                android:textSize="45dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/GuestInfectCount"
                android:focusable="false"
                android:layout_below="@+id/GuestTurnLight"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/GuestTurnCount"
                android:layout_below="@+id/GuestTurnLight"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/GuestTurnLight"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_below="@+id/GuestLifeCount"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="109dp"
            android:layout_gravity="left|bottom" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Other1TurnLight"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/Other1Life"
                android:enabled="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/Other1Infect"
                android:focusable="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/OtherTurnCount"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/Other1Name"
                android:layout_below="@+id/Other1Life"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="109dp"
            android:layout_gravity="center_horizontal|bottom" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/HostLife"
                android:enabled="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/HostInfect"
                android:focusable="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/HostTurnCount"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HostTurnLight"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/HostName"
                android:layout_below="@+id/HostLife"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="161dp"
            android:layout_height="109dp"
            android:layout_gravity="right|bottom" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Player4TurnLight"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Life"
                android:id="@+id/Player4Life"
                android:enabled="true"
                android:textSize="30dp"
                android:textIsSelectable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/Player4Infect"
                android:focusable="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn#"
                android:id="@+id/Player4TurnCount"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/Player4Name"
                android:layout_below="@+id/Player4Life"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASS TURN"
            android:id="@+id/button"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="149dp"
            android:layout_height="150dp"
            android:layout_gravity="right|center_vertical">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeFive"
                android:id="@+id/minusFiveHealth"
                android:enabled="true"
                android:layout_marginTop="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeOne"
                android:id="@+id/minusOneHealth"
                android:layout_above="@+id/plusOneHealth"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusFive"
                android:id="@+id/plusFiveHealth"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/plusOneHealth"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusOne"
                android:id="@+id/plusOneHealth"
                android:layout_below="@+id/minusFiveHealth"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Health"
                android:id="@+id/textView23"
                android:layout_above="@+id/minusOneHealth"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="149dp"
            android:layout_height="164dp"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/SSMTG">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusOne"
                android:id="@+id/plusOneInfect"
                android:layout_below="@+id/minusOneInfect"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusFive"
                android:id="@+id/plusFiveInfect"
                android:layout_gravity="right|center_vertical"
                android:layout_alignBaseline="@+id/plusOneInfect"
                android:layout_alignBottom="@+id/plusOneInfect"
                android:layout_alignParentEnd="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeOne"
                android:id="@+id/minusOneInfect"
                android:layout_gravity="left|bottom"
                android:layout_alignTop="@+id/minusFiveInfect"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negativeFive"
                android:id="@+id/minusFiveInfect"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Infect"
                android:id="@+id/textView24"
                android:layout_above="@+id/minusOneInfect"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>
